package practice;
import java.util.ArrayList;
class practiceJava {
	static void helper(int n ,int count ,ArrayList<Integer> arr){
        if(n==0) {
        	System.out.println(count);
        	System.out.println(arr);
        	return;
        }
        int rem =n%10;
        if(rem==1) {
        	count++;
        	arr.add(rem);
        	helper(n/10,count,arr);
        }
        else {
        	helper(n/10,count,arr);
        }
    }
    public static void main(String[] args) {
        
        ArrayList<Integer>arr= new ArrayList<>();
        int n=171511;
        helper(n ,0 , arr);

    }
	}
OUTPUT 
4
[1, 1, 1, 1]




