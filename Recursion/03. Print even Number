package practice;
class practiceJava {
	static void helper(int n){
        if(n ==0){
            return;
        }
         
        
         helper(n-1);
         if(n%2==0){
     System.out.println(n);
         }
    }
    public static void main(String[] args) {
        int n=17;
        helper(n);
    }
	}



OUTPUT:
2
4
6
8
10
12
14
16
